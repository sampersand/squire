form Variable {
	essence env = {};

	recall lookup
		(name) if (var = Variable.env[name]) != ni => var,
		(name) => Variable.env[name] = soul(name, ni, nay);

	matter name, value, assigned;

	change assign(new) {
		soul.assigned = yea;
		soul.value = new;
	}

	change run
		() if !soul.assigned { catapult 𝔲𝔫𝔨𝔫𝔬𝔴𝔫 𝔳𝔞𝔯𝔦𝔞𝔟𝔩𝔢\: + ' ' + soul.name; },
		() => soul.value
}
