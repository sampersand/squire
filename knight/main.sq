#!../squire -f
@henceforth $bug($msg) = catapult($msg) ;

@transcribe "env.sq"
@transcribe "functions.sq"
@transcribe "parser.sq"

if ARGV.length != II {
	usage:
	N.B. oops
}

fork ARGV[I] {
path '-e':
	src = ARGV[II]

path '-f':
	scroll = Scroll(ARGV[II], 'r')
	src = scroll.readall()
	scroll.close()

alas:
	whence usage
	proclaim("usage: ./main.sq (-e expr | -f file)")
	dismount(2);
}

attempt {
	Parser(src).next().run()
} alas err{
	proclaim("failure! {err}")
	dismount(1)
}
